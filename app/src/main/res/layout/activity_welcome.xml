<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="in.ac.skcet.companion.WelcomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/welcome" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="@string/welcome"
                android:textAlignment="center"
                tools:ignore="MissingPrefix"
                fontPath="fonts/sans.ttf"/>

            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:textAlignment="center"
                android:text="Greetings SKCETians!\nEmpower yourselves with SKCET Companion always with you. Now all the information right inside the app from attendance to your acheivements!"
                tools:ignore="MissingPrefix"
                fontPath="fonts/sans.ttf"/>

            <EditText
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:hint="REGISTER NUMBER"
                tools:ignore="MissingPrefix"
                android:id="@+id/welcome_reg"
                fontPath="fonts/sans.ttf"
                android:layout_marginBottom="32dp"
                android:inputType="textCapCharacters"
                android:textAlignment="center"
                android:textColorHint="@color/colorSecondaryText"
                android:textColor="@color/colorPrimaryText"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/welcome"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/welcome_signin"
            android:layout_weight="1"
            tools:ignore="MissingPrefix"
            fontPath="fonts/sans.ttf"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/colorPrimary"
            android:text="LOGIN"/>

    </LinearLayout>

</RelativeLayout>
